<div class="mt-4">
    <div class="row">
        {{#each course}}
        <div class="card col-sm-6 col-lg-4 mt-4">
            <a href="/course/{{this.slug}}">
                <img src="{{this.image}}" class="card-img-top" alt="...">
            </a>
            <div class="card-body">
                <a href="{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                </a>
                <p class="card-text">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Buy course</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
