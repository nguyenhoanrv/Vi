<div class="mt-4">
    <h2 class="text-center">Update Course : {{course.name}}</h2>
    <form action="/course/{{course.slug}}/edit" method="post">
        <div class="mb-3 row">
            <label for="name" class="col-sm-2 col-form-label">Title of Course</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" placeholder="{{course.name}}">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="description" name="description" placeholder="{{course.description}}">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="videoId" class="col-sm-2 col-form-label">Video ID</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="videoId" name="videoId" placeholder="{{course.videoId}}">
            </div>
        </div>
        <div class="text-center">
            <input type="submit" class="btn btn-dark" value="Edit course">
        </div>
    </form>
</div>